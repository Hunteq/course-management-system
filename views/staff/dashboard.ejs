  <div class="card mt-4">
    <div class="card-header">
      <h5>Quick Actions</h5>
    </div>
    <div class="card-body">
      <div class="d-grid gap-2 d-md-flex">
        <a href="/tests/create" class="btn btn-primary me-md-2">
          <i class="bi bi-plus-circle"></i> Create Test
        </a>
        <a href="/questions/create" class="btn btn-success me-md-2">
          <i class="bi bi-plus-circle"></i> Add Question
        </a>
        <a href="/staff/upload-material" class="btn btn-info">
          <i class="bi bi-upload"></i> Upload Material
        </a>
      </div>
